<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blowapp.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".artist_profile"
            android:label="James Blunt" />
        <activity
            android:name=".ArtistTabActivity"
            android:label="Artists" />
        <activity
            android:name=".FavoriteTabActivity"
            android:label="Favorites" />
        <activity
            android:name=".GenreTabActivity"
            android:label="Music Genres" />
        <activity
            android:name=".SearchTabActivity"
            android:label="Search" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="Now Playing" />
        <activity
            android:name=".PaymentActivity"
            android:label="Payment">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        </activity>
    </application>

</manifest>